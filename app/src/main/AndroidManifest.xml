<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yehya.shoppingapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShoppingApp"
            android:label="@string/title_activity_main2" />
        <activity
            android:name=".FoodNavigationDrawer"
            android:label="@string/title_activity_food_navigation_drawer"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ClothesNavigationDrawer"
            android:label="@string/title_activity_clothes_navigation_drawer"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ElectronicNavigationDrwer"
            android:label="@string/title_activity_electronic_navigation_drwer"
            android:theme="@style/AppTheme" />
        <activity android:name=".PurchasesActivity" />
        <activity android:name=".PayActivity" />
        <activity android:name=".TheLastActivity" />
        <activity android:name=".CreateanAccoount" />
        <activity android:name=".LoginOrCreateAccount"></activity>
    </application>

</manifest>